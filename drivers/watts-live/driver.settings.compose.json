            "multiline": true,
            "optional": true,
            "hint": {
              "en": "Paste your client certificate"
            },
            "conditional": {
              "useTLS": true,
              "mqttClient": "custom"
            }
          },
          {
            "type": "text",
            "id": "key",
            "label": {
              "en": "Client Key"
            },
            "multiline": true,
            "optional": true,
            "hint": {
              "en": "Paste your client key"
            },
            "conditional": {
              "useTLS": true,
              "mqttClient": "custom"
            }
          },
          {
            "type": "checkbox",
            "id": "rejectUnauthorized",
            "label": {
              "en": "Reject Unauthorized Certificates"
            },
            "hint": {
              "en": "Check to reject unauthorized certificates"
            },
            "conditional": {
              "useTLS": true,
              "mqttClient": "custom"
            }
          }
        ]
